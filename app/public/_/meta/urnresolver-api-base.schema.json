{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:resolver:schema:api:base",
  "title": "URN Resolver JSON Schema (API, base)",
  "description": "Early draft. See https://github.com/EticaAI/urn-resolver/issues/2",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^@": {
      "type": [
        "string",
        "object"
      ]
    }
  },
  "properties": {
    "$id": {
      "type": "string"
    },
    "$schema": {
      "type": "string"
    },
    "data": {
      "type": ["array", "object"]
    },
    "meta": {
      "type": "object"
    },
    "error": {
      "type": "object"
    }
  }
}
